---
interface Props {
	title: string;
	body: string;
	img: string;
	price: string;
}

const { img, title, body, price } = Astro.props;
---
<button type="button">

	<div id="card" class="bg-slate-600 rounded hover:scale-105 transition h-full flex flex-col">
		<img class="rounded-t" src={img} alt="">
		<div class="p-2">
			
			<h1 class="text-center text-amber-200 font-bold">{title}</h1>
			<p class="text-justify truncate">
				{body}
			</p>
		</div>
		<div class="mt-auto p-2 bg-slate-800 text-white rounded-b">
			<h1 class="text-center text-amber-200 self-end">${price}</h1>
		</div>
	</div>
</button>

