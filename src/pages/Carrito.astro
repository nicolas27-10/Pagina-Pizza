---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import ModalIngresa from "../components/Modal_Ingresa.astro"
---

<Layout title="El Secreto de la Z">
	<Header/>
	<ModalIngresa/>
	<main class="h-screen">
		<div class="flex flex-col">
			<h1 class="text-amber-200 text-center 2xl:text-8xl text-7xl new-amsterdam-regular animate-fade-in animate-duration-1000">
                CARRITO DE COMPRAS
			</h1>
			<h2 class="pt-4  italic text-amber-200 text-center 2xl:text-4xl text-3xl animate-fade-in animate-duration-1000 animate-delay-800">
				¡Comprueba tus productos y realiza tu compra!
			</h2>
		</div>
		<br>
		<section class="grid grid-cols-6 gap-4 text-black">
			<div class="col-span-4">
				<div class="bg-white/95 w-full p-2 rounded-md"> 
					<h1 class="font-semibold">Detalle de entrega</h1>
					<div class="w-full h-8 border border-black/40 rounded-md">
						<h1 class="pl-16">
							<span class="font-semibold">Dirección:</span> Calle 123, Colonia 123, Ciudad 123, Estado 123 CP 12345
						</h1>
					</div>
				</div>
				<div class="bg-white/95 w-full p-2 rounded-md mt-4"> 
					<h1 class="font-semibold">Productos</h1>
					
				</div>
			</div>
			<div class="col-span-2">
				<div class="bg-white/95 w-full p-2 rounded-md"> 
					<h1 class="font-semibold">Resumen</h1>

				</div>

			</div>
		</section>


	</main>
	<footer class="bottom-0 h-40 w-full bg-black content-center">
		<div class="text-center text-white">
			<h1>
				Pagina Diseñada por ***<br>©Derechos Reservados EL SECRETO DE LA Z
			</h1>
		</div>
	</footer>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1220px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	.new-amsterdam-regular {
  font-family: "New Amsterdam", sans-serif;
  font-weight: 400;
  font-style: normal;
	}

</style>

