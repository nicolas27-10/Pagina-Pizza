---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import ModalIngresa from "../components/Modal_Ingresa.astro"
---

<Layout title="El Secreto de la Z">
	<Header/>
	<ModalIngresa/>
	<main class="h-screen">
		<div class="flex flex-col">
			<h1 class="text-amber-200 text-center 2xl:text-8xl text-7xl new-amsterdam-regular animate-fade-in animate-duration-1000">
                CARRITO DE COMPRAS
			</h1>
			<h2 class="pt-4  italic text-amber-200 text-center 2xl:text-4xl text-3xl animate-fade-in animate-duration-1000 animate-delay-800">
				¡Comprueba tus productos y realiza tu compra!
			</h2>
		</div>
		<br>
		<section class="grid grid-cols-6 gap-4 text-black">
			<div class="col-span-4">
				<!-- Detalle de entrega -->
				<div class="bg-white/95 w-full p-4 rounded-md shadow">
					<h1 class="font-semibold text-lg mb-2">Detalle de entrega</h1>
					<div class="w-full h-auto border border-black/40 rounded-md p-2">
						<p>
							<span class="font-semibold">Dirección:</span> Calle 123, San Joaquin 123, Santiago, RM, CP 12345
						</p>
						<p>
							<span class="font-semibold">Teléfono:</span> +56 9 23 456 7890
						</p>
						<button class="mt-2 bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">
							Cambiar dirección
						</button>
					</div>
				</div>
		
				<!-- Productos -->
				<div class="bg-white/95 w-full p-4 rounded-md shadow mt-4">
					<h1 class="font-semibold text-lg mb-2">Productos</h1>
					<div class="space-y-4">
						<!-- Producto individual -->
						<div class="flex justify-between items-center border-b pb-2">
							<div class="flex items-center space-x-4">
								<img src="/images/pizza.jpeg" alt="Pizza" class="w-16 h-16 rounded-md">
								<div>
									<p class="font-semibold">Pizza Margarita</p>
									<p class="text-sm text-gray-500">Tamaño: Grande</p>
								</div>
							</div>
							<div class="flex items-center space-x-4">
								<p class="font-semibold">$10000</p>
								<input type="number" value="1" min="1" class="w-12 border rounded text-center">
								<button class="text-red-500 hover:underline">Eliminar</button>
							</div>
						</div>
		
						<!-- Agrega más productos de forma similar -->
					</div>
				</div>
			</div>
		
			<!-- Columna derecha: Resumen -->
			<div class="col-span-2">
				<div class="bg-white/95 w-full p-4 rounded-md shadow">
					<h1 class="font-semibold text-lg mb-2">Resumen</h1>
					<div class="space-y-2">
						<div class="flex justify-between">
							<p>Subtotal:</p>
							<p class="font-semibold">$10000</p>
						</div>
						<div class="flex justify-between">
							<p>Envío:</p>
							<p class="font-semibold">$2000</p>
						</div>
						<div class="flex justify-between font-semibold text-lg border-t pt-2">
							<p>Total:</p>
							<p>$12000</p>
						</div>
					</div>
					<button class="w-full bg-green-500 text-white py-2 mt-4 rounded-md hover:bg-green-600">
						Proceder al pago
					</button>
					<button class="w-full bg-gray-200 text-gray-700 py-2 mt-2 rounded-md hover:bg-gray-300">
						Seguir comprando
					</button>
				</div>
			</div>
		</section>


	</main>
	<footer class="bottom-0 h-40 w-full bg-black content-center">
		<div class="text-center text-white">
			<h1>
				Pagina Diseñada por ***<br>©Derechos Reservados EL SECRETO DE LA Z
			</h1>
		</div>
	</footer>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1220px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}

	.new-amsterdam-regular {
  font-family: "New Amsterdam", sans-serif;
  font-weight: 400;
  font-style: normal;
	}

</style>

