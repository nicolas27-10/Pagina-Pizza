<script>
	const carousel = document.getElementById('carousel');
const prevBtn = document.getElementById('prevBtn');
const nextBtn = document.getElementById('nextBtn');
const dots = document.querySelectorAll('.dot');

// Obtenemos la cantidad de im√°genes y el ancho de cada una
const scrollAmount = carousel.clientWidth;
const totalImages = dots.length;

// Funci√≥n para actualizar los indicadores
function updateIndicators(index) {
    dots.forEach((dot, i) => {
        if (i === index) {
            dot.classList.add('bg-gray-800');
            dot.classList.remove('bg-gray-400');
        } else {
            dot.classList.add('bg-gray-400');
            dot.classList.remove('bg-gray-800');
        }
    });
}

// Evento para el bot√≥n de siguiente
nextBtn.addEventListener('click', () => {
    const currentIndex = Math.round(carousel.scrollLeft / scrollAmount);
    if (currentIndex < totalImages - 1) {
        carousel.scrollLeft += scrollAmount;
        updateIndicators(currentIndex + 1);
    }
});

// Evento para el bot√≥n de anterior
prevBtn.addEventListener('click', () => {
    const currentIndex = Math.round(carousel.scrollLeft / scrollAmount);
    if (currentIndex > 0) {
        carousel.scrollLeft -= scrollAmount;
        updateIndicators(currentIndex - 1);
    }
});

// Inicia el primer indicador como activo
updateIndicators(0);

document.addEventListener('DOMContentLoaded', function() {
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('nav ul li a');

    console.log("Secciones encontradas:", sections);

    if (sections.length === 0) {
        console.error("No se encontraron secciones con IDs. Verifica tu HTML.");
        return;
    }

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            const id = entry.target.getAttribute('id');
            const navLink = document.querySelector(`nav ul li a[href="#${id}"]`);

            console.log(`Secci√≥n ${id} est√° intersectando:`, entry.isIntersecting);

            if (entry.isIntersecting) {
                navLinks.forEach(link => link.classList.remove('active-link'));
                navLink.classList.add('active-link');
            }else{
				navLink.classList.remove('active-link');
			}
        });
    }, {
        rootMargin: '20% 0px -25% 0px',  // Ajusta la zona de intersecci√≥n para que se active cuando la secci√≥n est√© centrada
        threshold: 0.3                    // Cuando el 10% de la secci√≥n est√© visible
    });

    sections.forEach(section => {
        observer.observe(section);
    });
});


</script>
